<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.monitorfolder</string>
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/monitor_folder.sh</string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <true/>
    <key>StandardOutPath</key>
    <string>/tmp/monitor_folder.out</string>
    <key>StandardErrorPath</key>
    <string>/tmp/monitor_folder.err</string>
    <key>UserName</key>
    <string>root</string>
</dict>
</plist>
